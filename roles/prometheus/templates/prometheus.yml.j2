global:
  scrape_interval:     15s # By default, scrape targets every 15 seconds.

rule_files:
  - {{ prometheus_config_dir }}/rules/ansible_managed.rules

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - localhost:9093

scrape_configs:
  - job_name: 'node'
    scrape_interval: 5s
    static_configs:
      - targets: ['https://jackmitchellfordyce.com']
        labels:
          service: 'personal-website'
          severity: 'email'

  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']
        labels:
          service: 'prometheus'
          severity: 'email'
